<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="chat_on_the_web.list">
      <field name="name">chat_on_the_web list</field>
      <field name="model">chat_on_the_web.chat_on_the_web</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>
    

    <!-- actions opening views on models -->
  
    <record model="ir.actions.act_window" id="chat_on_the_web.action_window">
      <field name="name">chat_on_the_web window</field>
      <field name="res_model">chat_on_the_web.chat_on_the_web</field>
      <field name="view_mode">tree,form</field>
    </record>
    

    <!-- server action to the one above -->
    
    <record model="ir.actions.server" id="chat_on_the_web.action_server">
      <field name="name">chat_on_the_web server</field>
      <field name="model_id" ref="model_chat_on_the_web_chat_on_the_web"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    

    <!-- Top menu item -->
    
    <menuitem name="chat_on_the_web" id="chat_on_the_web.menu_root"/>
    
    <!-- menu categories -->
    
    <menuitem name="Menu 1" id="chat_on_the_web.menu_1" parent="chat_on_the_web.menu_root"/>
    <menuitem name="Menu 2" id="chat_on_the_web.menu_2" parent="chat_on_the_web.menu_root"/>
    
    <!-- actions -->
    
    <menuitem name="List" id="chat_on_the_web.menu_1_list" parent="chat_on_the_web.menu_1"
              action="chat_on_the_web.action_window"/>
    <menuitem name="Server to list" id="chat_on_the_web" parent="chat_on_the_web.menu_2"
              action="chat_on_the_web.action_server"/>
    
  </data>
</odoo>