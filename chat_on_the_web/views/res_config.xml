<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.chatweb</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="languages_setting" position="after">
                <div class="col-xs-12 col-md-6 o_setting_box" id="live_chat_install_setting">
                    <div class="o_setting_left_pane" modifiers="{}">
                        <field name="has_chat_web" modifiers="{}"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="has_chat_web" modifiers="{}"/>
                        <div class="text-muted">
                            Canal Chat Web en el sitio Web
                        </div>
                        <div class="content-group" attrs="{'invisible': [('has_chat_web', '=', False)]}" modifiers="{'invisible':[['has_chat_web','=',false]]}">
                            <div class="row mt16" modifiers="{}">
                                    <label class="col-md-3 o_light_label" string="Canal" for="channel_id"/>
                                    <field name="channel_id" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
















            </div>
        </field>
    </record>

</odoo>
