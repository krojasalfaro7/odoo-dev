<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
  <!--Recursos necesarios para que se vean los chats en el modulo de debates-->
  <template id="assets_backend" name="ChatWeb assets backend" inherit_id="web.assets_backend">
      <xpath expr="." position="inside">
          <script type="text/javascript" src="/chat_on_the_web/static/src/js/web_chat_backend.js"></script>
          <script type="text/javascript" src="/chat_on_the_web/static/src/js/copy_clipboard.js"></script>
          <link rel="stylesheet" href="/chat_on_the_web/static/src/less/copy_clipboard.less"/>
      </xpath>
  </template>

  <!--Recursos necesarios para establecer los diferentes chats en la interfaz web-->
  <template id="assets_frontend" name="ChatWeb assets frontend" inherit_id="website.assets_frontend">
      <xpath expr="." position="inside">
          <t t-call="web.less_helpers"/>
          <script type="text/javascript" src="/bus/static/src/js/bus.js"></script>
          <script type="text/javascript" src="/mail/static/src/js/document_viewer.js"></script>
          <script type="text/javascript" src="/chat_on_the_web/static/src/js/chat_window.js"></script>
          <script type="text/javascript" src="/mail/static/src/js/thread.js"></script>
          <script type="text/javascript" src="/chat_on_the_web/static/src/js/web_chat.js"></script>
          <link rel="stylesheet" href="/mail/static/src/less/chat_window.less"></link>
          <link rel="stylesheet" href="/mail/static/src/less/thread.less"></link>
          <link rel="stylesheet" href="/chat_on_the_web/static/src/less/web_chat.less"/>
      </xpath>
  </template>
</data>
</odoo>
