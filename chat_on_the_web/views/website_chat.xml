<odoo>
  <data>
  <template id="loader" inherit_id="website.layout" name="ChatWeb : Incluyendo el cargador en la Website">
      <xpath expr="//div[@id='wrapwrap']" position="after">

        <!--Buscando si estÃ¡ habilitado el modulo Chat Web en la configuracion-->
        <t t-set="is_enable_chat_web" t-value="request.env['ir.config_parameter'].sudo().get_param('website.has_chat_web')"/>

        <!--Si esta habilitado el modulo se muestra el chat en la Qweb-->
          <t t-if="is_enable_chat_web">
            <t t-if="website.channel_id.sudo().search([]) and website">
                <script>
                    <t t-call="chat_on_the_web.cargar">
                        <t t-set="channel" t-value="website.channel_id.sudo().search([])[0].id"/>
                    </t>
                </script>
            </t>
          </t>

      </xpath>
  </template>
</data>
</odoo>